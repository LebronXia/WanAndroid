        <activity android:name=".mvvm.view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".mvvm.view.activity.LoginActivity" />
        <activity android:name=".mvvm.view.activity.RegisterActivity" />
        <activity android:name=".mvvm.view.activity.KnowTreeDetailActivity"/>

        <activity android:name=".mvvm.view.activity.SearchActivity"/>
        <activity android:name=".mvvm.view.activity.SearchResultActivity"/>
        <activity android:name=".mvvm.view.activity.CollectActivity"/>
        <activity android:name=".mvvm.view.activity.WebActivity"/>
    </application>

</manifest>