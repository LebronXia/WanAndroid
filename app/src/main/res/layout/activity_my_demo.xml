<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycleview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/shape_divider_my"
            android:showDividers="middle"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_layoutmanager"
                style="@style/MyTextView"
                android:onClick="onClick"
                android:text="layoutManager"
                />

            <TextView
                android:id="@+id/tv_viewGroup"
                style="@style/MyTextView"
                android:onClick="onClick"
                android:text="kotlin自定义ViewGroup"/>

            <TextView
                android:id="@+id/tv_navigation"
                style="@style/MyTextView"
                android:onClick="onClick"
                android:text="Navigation"/>

            <TextView
                android:id="@+id/tv_flow"
                style="@style/MyTextView"
                android:onClick="onClick"
                android:text="Flow"/>

            <TextView
                android:id="@+id/tv_paging3"
                style="@style/MyTextView"
                android:onClick="onClick"
                android:text="paging3"/>

            <TextView
                android:id="@+id/tv_count_recycle"
                style="@style/MyTextView"
                android:onClick="onClick"
                android:text="倒计时的RecyleView"/>
            <TextView
                android:id="@+id/tv_viewpager2"
                style="@style/MyTextView"
                android:onClick="onClick"
                android:text="viewpager2"/>
            <TextView
                android:id="@+id/tecent_class_view"
                style="@style/MyTextView"
                android:onClick="onClick"
                android:text="tecentclassView"/>

            <TextView
                android:id="@+id/mvi_home"
                style="@style/MyTextView"
                android:onClick="onClick"
                android:text="HomeMvi"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>