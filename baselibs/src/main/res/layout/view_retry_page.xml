<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
    android:id="@+id/tv_page_empty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:paddingTop="20dp"
    android:text="@string/msg_error_retry"
    android:textColor="#666666"
    android:textSize="15sp" />

  <ImageView
    android:id="@+id/img_page_empty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/tv_page_empty"
    android:layout_centerInParent="true"
    android:src="@drawable/img_tips_error_load_error" />

  <Button
    android:layout_width="120dp"
    android:layout_height="30dp"
    android:layout_marginTop="20dp"
    android:layout_below="@id/tv_page_empty"
    android:layout_centerInParent="true"
    android:background="@color/colorStress"
    android:text="重试"
      android:clickable="false"
      android:focusable="false"
    android:textColor="@android:color/white"
    android:textSize="14sp" />
</RelativeLayout>